{
  "name": "vite-hono-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx scripts/builder.ts",
    "dev": "vite",
    "db:drop": "drizzle-kit drop --config=config/db.ts",
    "db:push": "drizzle-kit push:pg --config=config/db.ts",
    "db:studio": "drizzle-kit studio --config=config/db.ts",
    "db:check": "drizzle-kit check:pg --config=config/db.ts",
    "db:generate": "drizzle-kit generate:pg --config=config/db.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "node ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.1",
    "@hono/oauth-providers": "^0.3.1",
    "@hono/typebox-validator": "^0.2.2",
    "@hono/vite-dev-server": "^0.7.0",
    "@remix-run/node": "^2.7.1",
    "@remix-run/react": "^2.7.1",
    "@remix-run/server-runtime": "^2.7.1",
    "@sinclair/typebox": "^0.32.14",
    "drizzle-orm": "^0.29.3",
    "drizzle-typebox": "^0.1.1",
    "esbuild": "^0.20.1",
    "fast-jwt": "^4.0.0",
    "hono": "^4.0.5",
    "isbot": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hono": "^0.0.15",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.7.1",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
