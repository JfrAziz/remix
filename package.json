{
  "name": "vite-hono-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx server.ts",
    "dev": "vite",
    "db:drop": "drizzle-kit drop --config=config/db.ts",
    "db:push": "drizzle-kit push:pg --config=config/db.ts",
    "db:studio": "drizzle-kit studio --config=config/db.ts",
    "db:check": "drizzle-kit check:pg --config=config/db.ts",
    "db:generate": "drizzle-kit generate:pg --config=config/db.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "node ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.1",
    "@hono/oauth-providers": "^0.3.1",
    "@hono/valibot-validator": "^0.2.2",
    "@hono/vite-dev-server": "^0.8.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/server-runtime": "^2.7.2",
    "@tanstack/react-form": "^0.13.6",
    "@tanstack/valibot-form-adapter": "^0.13.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.4",
    "esbuild": "^0.20.1",
    "hono": "^4.0.7",
    "isbot": "^5.1.0",
    "lucide-react": "^0.341.0",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hono": "^0.0.15",
    "sonner": "^1.4.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^2.3.0",
    "valibot": "^0.29.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.7.2",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.11.3",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
