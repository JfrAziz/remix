{
  "name": "vite-hono-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "node ./build/server/index.js",
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx server.ts",
    "db:drop": "drizzle-kit drop --config=config/db.ts",
    "db:push": "drizzle-kit push:pg --config=config/db.ts",
    "db:studio": "drizzle-kit studio --config=config/db.ts",
    "db:check": "drizzle-kit check:pg --config=config/db.ts",
    "db:generate": "drizzle-kit generate:pg --config=config/db.ts",
    "test": "vitest --run",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --verbose --apply ."
  },
  "dependencies": {
    "@hono/node-server": "^1.11.2",
    "@hono/oauth-providers": "^0.5.0",
    "@hono/valibot-validator": "^0.2.5",
    "@hono/vite-dev-server": "^0.12.1",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/server-runtime": "^2.9.2",
    "@tanstack/react-form": "^0.20.2",
    "@tanstack/valibot-form-adapter": "^0.20.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.31.0",
    "esbuild": "^0.21.4",
    "hono": "^4.4.2",
    "isbot": "^5.1.8",
    "lucide-react": "^0.383.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-hono": "^0.0.16",
    "sonner": "^1.4.41",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^2.3.0",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@remix-run/dev": "^2.9.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.22.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.11.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
