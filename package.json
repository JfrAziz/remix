{
  "name": "vite-hono-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "node ./build/server/index.js",
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx server.ts",
    "db:drop": "drizzle-kit drop --config=config/db.ts",
    "db:push": "drizzle-kit push:pg --config=config/db.ts",
    "db:studio": "drizzle-kit studio --config=config/db.ts",
    "db:check": "drizzle-kit check:pg --config=config/db.ts",
    "db:generate": "drizzle-kit generate:pg --config=config/db.ts",
    "test": "vitest --run",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage",
    "lint:tsc": "tsc",
    "lint:fix": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "lint:report": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint ."
  },
  "dependencies": {
    "@hono/node-server": "^1.9.1",
    "@hono/oauth-providers": "^0.3.2",
    "@hono/valibot-validator": "^0.2.2",
    "@hono/vite-dev-server": "^0.10.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/server-runtime": "^2.8.1",
    "@tanstack/react-form": "^0.19.0",
    "@tanstack/valibot-form-adapter": "^0.19.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.30.6",
    "esbuild": "^0.20.2",
    "hono": "^4.1.5",
    "isbot": "^5.1.3",
    "lucide-react": "^0.363.0",
    "postgres": "^3.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hono": "^0.0.16",
    "sonner": "^1.4.41",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^2.3.0",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@vitest/coverage-istanbul": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.11.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
